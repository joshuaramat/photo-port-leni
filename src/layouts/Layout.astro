---
import Header from '../components/Landing/Header.astro';
import '../styles/main.css';

interface Props {
	title?: string;
}

const { title = "Lena Photography" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Lena Photography - Professional Photography Services" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Nunito:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header title={title} />
		<main class="pt-16">
			<slot />
		</main>
		<footer class="bg-gray-900 text-white py-12">
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-xl font-bold mb-4" style="font-family: 'Cormorant Garamond', serif;">Lena Photography</h3>
						<p class="text-gray-400">Capturing moments that last a lifetime.</p>
					</div>
					<div>
						<h4 class="text-lg font-semibold mb-4">Quick Links</h4>
						<ul class="space-y-2">
							<li><a href="#gallery" class="text-gray-400 hover:text-white transition-colors">Gallery</a></li>
							<li><a href="#about" class="text-gray-400 hover:text-white transition-colors">About</a></li>
							<li><a href="#contact" class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
						</ul>
					</div>
					<div>
						<h4 class="text-lg font-semibold mb-4">Contact</h4>
						<ul class="space-y-2 text-gray-400">
							<li>Email: contact@lenaphotography.com</li>
							<li>Phone: (555) 123-4567</li>
							<li>Location: San Francisco, CA</li>
						</ul>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
					<p>&copy; {new Date().getFullYear()} Lena Photography. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
