---
interface Props {
    title?: string;
}

const { title = "Leni Photography" } = Astro.props;

const navItems = [
    { href: "#about", label: "About" },
    { href: "#services", label: "Services" },
    { href: "#gallery", label: "Gallery" },
    { href: "#contact", label: "Contact" }
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md" client:load>
    <nav class="container py-4">
        <div class="flex items-center justify-between">
            <a href="/" class="text-2xl font-bold text-gray-900" client:load>
                {title}
            </a>
            <ul class="flex items-center space-x-8">
                {navItems.map(item => (
                    <li>
                        <a href={item.href} class="nav-link" client:load>
                            {item.label}
                        </a>
                    </li>
                ))}
            </ul>
        </div>
    </nav>
</header> 