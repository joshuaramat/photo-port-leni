---
const services = [
    {
        title: "Events",
        description: "Capture the energy and excitement of your special occasions."
    },
    {
        title: "Couples",
        description: "Beautiful portraits celebrating your love story."
    },
    {
        title: "Fitness",
        description: "Dynamic photography showcasing your fitness journey."
    },
    {
        title: "Wedding",
        description: "Timeless memories of your perfect day."
    }
];
---

<section id="services" class="section">
    <div class="container">
        <h2 class="section-title">Our Services</h2>
        <p class="section-subtitle">Professional photography solutions for every occasion</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {[
                { title: 'Wedding Photography', image: 8 },
                { title: 'Portrait Sessions', image: 9 },
                { title: 'Event Coverage', image: 10 },
                { title: 'Family Photos', image: 11 },
                { title: 'Commercial Photography', image: 12 },
                { title: 'Custom Packages', image: 13 }
            ].map(service => (
                <div class="card group overflow-hidden" client:load>
                    <div class="relative aspect-[4/3] overflow-hidden">
                        <img 
                            src={`https://picsum.photos/800/600?random=${service.image}`} 
                            alt={service.title}
                            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                        />
                        <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                            <a href="#contact" class="btn btn-primary" client:load>Book Now</a>
                        </div>
                    </div>
                    <div class="p-4">
                        <h3 class="text-xl font-semibold mb-2">{service.title}</h3>
                        <p class="text-gray-600">Professional photography services tailored to your needs</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section> 