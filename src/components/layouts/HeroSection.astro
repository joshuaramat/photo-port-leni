---
interface Props {
  title: string;
  subtitle?: string;
  className?: string;
  backgroundImage?: string;
}

const { title, subtitle, className = '', backgroundImage = '/images/hero-bg.jpg' } = Astro.props;
---

<section class={`hero-section ${className}`}>
  <div class="hero-background">
    <img 
      src={backgroundImage} 
      alt="Hero background" 
      class="hero-image"
      loading="eager"
    />
    <div class="hero-overlay"></div>
  </div>
  <div class="hero-content">
    <h1 class="hero-title">{title}</h1>
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    <div class="hero-actions">
      <slot name="actions" />
    </div>
  </div>
</section>

<style>
  .hero-section {
    @apply relative min-h-screen flex items-center justify-center text-center;
  }

  .hero-background {
    @apply absolute inset-0 z-0;
  }

  .hero-image {
    @apply w-full h-full object-cover;
  }

  .hero-overlay {
    @apply absolute inset-0 bg-black/50;
  }

  .hero-content {
    @apply relative z-10 max-w-3xl mx-auto px-4;
  }

  .hero-title {
    @apply text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4;
  }

  .hero-subtitle {
    @apply text-xl md:text-2xl text-white mb-8;
  }

  .hero-actions {
    @apply flex flex-col sm:flex-row gap-4 justify-center;
  }
</style> 