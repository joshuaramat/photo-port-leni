---
import HeroSection from '../layouts/HeroSection.astro';
import { getImageConfig } from '../common/images';

const heroImage = getImageConfig('hero', 'hero.jpg', 'Hero background', 3840, 2160);
---

<HeroSection
  title="Capturing Life's Beautiful Moments"
  subtitle="Professional photography services for weddings, portraits, and special events"
  backgroundImage={heroImage.src}
>
  <div slot="actions">
    <a href="#gallery" class="btn-primary">View Gallery</a>
    <a href="#contact" class="btn-secondary">Book a Session</a>
  </div>
</HeroSection>

<style>
    .hero-title {
        @apply text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8),
                     0 4px 8px rgba(0, 0, 0, 0.6);
    }

    .hero-subtitle {
        @apply text-xl md:text-2xl text-white mb-8;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8),
                     0 2px 4px rgba(0, 0, 0, 0.6);
    }

    .btn-primary {
        @apply bg-white text-gray-900 px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors;
    }

    .btn-secondary {
        @apply bg-transparent text-white px-6 py-3 rounded-lg font-medium border-2 border-white hover:bg-white/10 transition-colors;
    }

    :global(.hero-image) {
        @apply w-full h-full object-cover object-center;
    }

    @media (prefers-reduced-motion: reduce) {
        .btn {
            transition: none;
        }
    }
</style> 