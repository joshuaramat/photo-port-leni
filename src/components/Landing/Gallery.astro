<section id="gallery" class="section">
    <div class="container">
        <h2 class="section-title">My Portfolio</h2>
        <p class="section-subtitle">A glimpse into our work</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {[1, 2, 3, 4, 5, 6].map((num) => (
                <div class="card group overflow-hidden" client:load>
                    <div class="relative aspect-[4/3] overflow-hidden">
                        <img 
                            src={`https://picsum.photos/800/600?random=${num}`} 
                            alt={`Gallery image ${num}`}
                            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                        />
                        <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                            <a href="#contact" class="btn btn-primary" client:load>Book This Style</a>
                        </div>
                    </div>
                    <div class="p-4">
                        <h3 class="text-xl font-semibold mb-2">Photo Title {num}</h3>
                        <p class="text-gray-600">Category: {['Portrait', 'Landscape', 'Event', 'Wedding', 'Family', 'Nature'][num - 1]}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section> 