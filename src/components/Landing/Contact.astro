---
import ContactForm from '../React/ContactForm';
---

<section id="contact" class="section bg-gray-50" role="region" aria-label="Contact section">
    <div class="container">
        <h2 class="section-title">Let's Create Together</h2>
        <p class="section-subtitle">Ready to capture your story? It only takes 2 minutes to start. I'll get back to you within 24 hours.</p>
        <div class="max-w-2xl mx-auto">
            <ContactForm client:load />
        </div>
    </div>
</section> 